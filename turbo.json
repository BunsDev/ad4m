{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", "build/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:windows": {
      "outputs": []
    },

    "package-macos": {
      "dependsOn": ["^lint", "@perspect3vism/ad4m#build", "@perspect3vism/ad4m-executor#build", "ad4m-host#build"],
      "outputs": ["dist/**", "lib/**", "build/**"]
    },
    "package-windows": {
      "dependsOn": ["^lint", "@perspect3vism/ad4m#build", "@perspect3vism/ad4m-executor#build", "ad4m-host#build"],
      "outputs": ["dist/**", "lib/**", "build/**"]
    },
    "package-linux": {
      "dependsOn": ["^lint", "@perspect3vism/ad4m#build", "@perspect3vism/ad4m-executor#build", "ad4m-host#build"],
      "outputs": ["dist/**", "lib/**", "build/**"]
    },

    "build-unix": {},
    "build-windows": {},

    "release-macos": {
      "dependsOn": ["package-macos", "build-unix"],
      "outputs": ["dist/**"]
    },
    "release-windows": {
      "dependsOn": ["package-windows", "build-windows"],
      "outputs": ["dist/**"]
    },
    "release-linux": {
      "dependsOn": ["package-linux", "build-unix"],
      "outputs": ["dist/**"]
    }
  }
}
